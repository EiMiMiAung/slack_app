<h1>チャンネルを作成</h1><br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@mcha, url: createchannel_path) do |f| %>
      <div class="col-md-1">
      <%= f.radio_button :isprivate, false, :checked =>true %>
      </div>
      <div class="col-md-2">
      <%=f.label :パブリック%>
      </div>
      <div class="col-md-1">
      <%= f.radio_button :isprivate, true %>
      </div>
      <div class="col-md-2">
      <%=f.label :プライベート%>
      </div>

    <br><br><br>
      <%= f.label :チャンネル名 %>
      <%= f.text_field :name,class:'form-control' %><br><br>
      <%= f.text_field :workspace_id, class: 'form-control', value:session[:workspace_id] ,class: "#{'display-none'}"  %>
      
    <div class="col-md-3">
      <%= f.submit "キャンセル", class: "btn btn-lg btn-primary" %>
    </div>
    <div class="col-md-3">
    <%= f.submit "作成", class: "btn btn-lg btn-primary" %>
    </div>
   
  <% end %>
  </div>
</div>